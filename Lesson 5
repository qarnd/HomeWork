Ex1
 Write an if-statement that takes two integer variables and exchanges their values if the first one is greater than the second one
 
using System;
 
public class Program
{
    public static void Main()
    {
		
		int a;
		int b;
		int temp;
		
		Console.Write("Enter first number: ");
   		a = int.Parse(Console.ReadLine());
		Console.Write("Enter second number: ");
   		b = int.Parse(Console.ReadLine());
		
		if (a > b)
		{
			temp = a;
			a = b;
			b = temp;
		Console.WriteLine("Value of a and b are exchanged {0}, {1}", a, b );
		}
		
		else Console.WriteLine("Value of a and b are NOT exchanged {0}, {1}", a, b );
    }

}

Ex 3
 Write a program that finds the biggest of three integers, using nested if statements.
 
using System;
 
public class Program
{
    public static void Main()
    {
		
		int a;
		int b;
		int c;
		
		Console.Write("Enter first number: ");
   		a = int.Parse(Console.ReadLine());
		Console.Write("Enter second number: ");
   		b = int.Parse(Console.ReadLine());
		Console.Write("Enter third number: ");
   		c = int.Parse(Console.ReadLine());
		
		if (a > b)
		{
			Console.WriteLine("a is bigger than b {0}, {1}", a, b);
			
			if (a > c)				
			{
				Console.WriteLine("a is the biggest value {0}", a);
			}
			
			else 
			{		
				Console.WriteLine("c is bigger than a value {0}, {1}", c, a);
			
				if (c > b)
				{
					Console.WriteLine("C is the biggest value {0}", c);
				}
				
			}
		}
		
		else
		{
			if (b > c)
			Console.WriteLine("b is the biggest value {0}", b);
			
			else
			{
				Console.WriteLine("c is the biggest value {0}", c);
			}
		}
	}
}


Ex5
using System;
 
public class Program
{
    public static void Main()
    {
	int number;
	string s;
	Console.WriteLine("Please write number 0 to 9");
	number = Convert.ToInt32 (Console.ReadLine());
		
		switch (number)
		{
    		case 1: s = "one"; break;
    		case 2: s = "two"; break;
		case 3: s = "three"; break;
		case 4: s = "four"; break;
		case 5: s = "five"; break;
		case 6: s = "six"; break;
		case 7: s = "seven"; break;
		case 8: s = "eight"; break;
		case 9: s = "nine"; break;
		case 0: s = "zero"; break;
		default: s = "Not valid value"; break;
		}	
	Console.WriteLine(s);
	}
}

Ex8:
using System;
 
public class Program
{
    public static void Main()
    {
	
		int number;
		double number2;
		string s;
			Console.WriteLine("Please enter 1 for int, 2 for double, 3 for string");
			int choice = Convert.ToInt32 (Console.ReadLine());
		
		switch (choice)
		{
		case 1:
			Console.WriteLine("Enter int value");
			number = Convert.ToInt32 (Console.ReadLine());
			Console.WriteLine("Value equal:{0}", (number+1));
			break;			
    		case 2:
			Console.WriteLine("Enter double value");
			number2 = Convert.ToDouble (Console.ReadLine());
			Console.WriteLine("Value equal:{0}", (number2+1));
			break;
		case 3: 
			Console.WriteLine("Enter string value");
			s = Console.ReadLine();
			Console.WriteLine("Value equal:{0}", s+"*");
			break;	
		default: Console.WriteLine("Not valid value"); 
			break;
		}	
	}
}


Ex10:
using System;
 
public class Program
{
    public static void Main()
	{
	int number;
	Console.WriteLine("Please write number 0 to 9");
	number = Convert.ToInt32 (Console.ReadLine());
		
		switch (number)
		{
    	case 1: 
		case 2:
		case 3:	
			Console.WriteLine("Enter value 1,2,3");
			number = Convert.ToInt32 (Console.ReadLine());
			Console.WriteLine("Value equal:{0}", (number*10));
			break;
		case 4: 
		case 5:
		case 6:	
			Console.WriteLine("Enter value 4,5,6");
			number = Convert.ToInt32 (Console.ReadLine());
			Console.WriteLine("Value equal:{0}", (number*100));
			break;	
		case 7: 
		case 8:
		case 9:	
			Console.WriteLine("Enter value 7,8,9");
			number = Convert.ToInt32 (Console.ReadLine());
			Console.WriteLine("Value equal:{0}", (number*1000));
			break;
			
		default: 
			number = Convert.ToInt32(Console.ReadLine()); 
			Console.WriteLine("Value is not between range: you lost");
			break;
		}	
	}
}
